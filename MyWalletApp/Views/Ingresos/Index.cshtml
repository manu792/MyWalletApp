@model MyWalletApp.Models.SearchViewModel<MyWalletApp.Logic.Models.IngresoDto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ingresos</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <p>
            @Html.ActionLink("Agregar Ingreso", "Create")
        </p>
        <div class="search col-md-12">
            <div class="row">
                <div class="col-md-4">
                    @Html.DisplayNameFor(model => model.FechaDesde)
                    @Html.TextBoxFor(model => model.FechaDesde, new { placeholder = "mm/dd/yyyy", @class = "form-control search normal-datepicker" })
                </div>
                <div class="col-md-4">
                    @Html.DisplayNameFor(model => model.FechaHasta)
                    @Html.TextBoxFor(model => model.FechaHasta, new { placeholder = "mm/dd/yyyy", @class = "form-control search normal-datepicker" })
                </div>
                <div class="col-md-4">
                    @Html.DisplayNameFor(model => model.FuentesServiciosDisponibles)
                    @Html.DropDownListFor(model => model.FuenteId, Model.FuentesServiciosDisponibles, new { @class = "form-control search" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="col-md-4 col-md-offset-3">
                        <input type="submit" value="Buscar" class="btn btn-default btn-block" />
                    </div>
                </div>
            </div>
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.Label("Monto")
                </th>
                <th>
                    @Html.Label("Fuente")
                </th>
                <th>
                    @Html.Label("Fecha")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Transacciones)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fuente.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        <p>
            Total en Ingresos: @Model.Transacciones.Sum(item => item.Monto)
        </p>
    }
</body>
</html>
