@model MyWalletApp.Logic.Models.ServicioDto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Monto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Monto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaPago)
        </dt>

        <dd>
            @if (Model.EsPorMes)
            {
                @Html.DisplayFor(model => model.FechaPago.Day)<span> de cada mes</span>
            }
            else
            {
                @Html.DisplayFor(model => model.FechaPago.Day)<span>/</span>@Html.DisplayFor(model => model.FechaPago.Month)<span> de cada año</span>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Volver a servicios", "Index")
</p>
