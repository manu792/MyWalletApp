@model IEnumerable<MyWalletApp.Logic.Models.ServicioDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Servicios/Subscripciones</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaPago)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @if (item.EsPorMes)
            {
                @Html.DisplayFor(modelItem => item.FechaPago.Day)<span> de cada mes</span>
            }
            else
            {
                @Html.DisplayFor(modelItem => item.FechaPago.Day)<span>/</span>@Html.DisplayFor(modelItem => item.FechaPago.Month)<span> de cada año</span>
            }
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
