@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>View</title>
</head>
<body>
    <div class="w3-row-padding w3-center w3-margin-top">
        <div class="w3-third">
            <div class="w3-card w3-container" style="min-height:460px">
                <a href="@Url.Action("Index", "Ingresos")">
                    <h3>Ingresos</h3><br>
                    <i class="fa fa-money w3-margin-bottom w3-text-theme" style="font-size:120px"></i>
                </a>
            </div>
        </div>

        <div class="w3-third">
            <div class="w3-card w3-container" style="min-height:460px">
                <a href="@Url.Action("Index", "Gastos")">
                    <h3>Gastos</h3><br>
                    <i class="fa fa-cc-visa w3-margin-bottom w3-text-theme" style="font-size:120px"></i>
                </a>
            </div>
        </div>

        <div class="w3-third">
            <div class="w3-card w3-container" style="min-height:460px">
                <a href="@Url.Action("Index", "Proyeccion")">
                    <h3>Proyeccion</h3><br>
                    <i class="fa fa-bar-chart w3-margin-bottom w3-text-theme" style="font-size:120px"></i>
                </a>
            </div>
        </div>

        <div class="w3-third">
            <div class="w3-card w3-container" style="min-height:460px">
                <a href="@Url.Action("Index", "Servicio")">
                    <h3>Servicios</h3><br>
                    <i class="fa fa-lightbulb-o w3-margin-bottom w3-text-theme" style="font-size:120px"></i>
                </a>
            </div>
        </div>

        <div class="w3-third">
            <div class="w3-card w3-container" style="min-height:460px">
                <a href="@Url.Action("Index", "Fuente")">
                    <h3>Fuentes</h3><br>
                    <i class="fa fa-dollar w3-margin-bottom w3-text-theme" style="font-size:120px"></i>
                </a>
            </div>
        </div>

        <div class="w3-third">
            <div class="w3-card w3-container" style="min-height:460px">
                <a href="@Url.Action("Index", "Comparativa")">
                    <h3>Comparativa</h3><br>
                    <i class="fa fa-copy w3-margin-bottom w3-text-theme" style="font-size:120px"></i>
                </a>
            </div>
        </div>
    </div>
    <h2>
        Total en Billetera: ₡@ViewBag.Billetera
    </h2>
    <br>
</body>
</html>
